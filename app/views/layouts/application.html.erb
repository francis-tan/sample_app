<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %> <!--Prevent cross scripting-->
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %> <!-- for loop it shows the key and the value-->
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %> <!--this ensures that visiting the page to HTML -->
      </section>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %> <!-- Debug -->
    </div>
  </body>
</html>

